<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- =========================
         Form View
    ========================== -->
    <record id="view_school_result_form" model="ir.ui.view">
        <field name="name">school.result.form</field>
        <field name="model">school.result</field>
        <field name="arch" type="xml">
            <form string="School Result">
                <sheet>
                    <div class="oe_button_box" name="button_box"/>

                    <group>
                        <field name="roll_number"/>
                        <field name="student_id" readonly="1"/>
                        <field name="class_id" readonly="1"/>
                        <field name="exam_id"/>
                        <field name="date"/>
                    </group>

                    <notebook>
                        <page string="Subjects">
                            <field name="line_ids" context="{'default_result_id': active_id}">
                                <tree editable="bottom">
                                    <field name="subject_id"/>
                                    <field name="obtained_marks"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Summary">
                            <group>
                                <field name="total_marks" readonly="1"/>
                                <field name="obtained_marks" readonly="1"/>
                                <field name="percentage" readonly="1"/>
                                <field name="grade" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- =========================
         Tree View
    ========================== -->
    <record id="view_school_result_tree" model="ir.ui.view">
        <field name="name">school.result.tree</field>
        <field name="model">school.result</field>
        <field name="arch" type="xml">
            <tree string="Student Results">
                <field name="roll_number"/>
                <field name="exam_id"/>
                <field name="student_id"/>
                <field name="class_id"/>
                <field name="total_marks"/>
                <field name="obtained_marks"/>
                <field name="percentage"/>
                <field name="grade"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <!-- =========================
         Action
    ========================== -->
    <record id="action_school_result" model="ir.actions.act_window">
        <field name="name">Student Results</field>
        <field name="res_model">school.result</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new student result.
            </p>
        </field>
    </record>

    <!-- =========================
         Menus
    ========================== -->

    <!-- ✅ Root School Menu -->
    <menuitem id="menu_school_root"
              name="School"
              sequence="1"/>

    <!-- ✅ Academics Section -->
    <menuitem id="menu_school_academics_root"
              name="Academics"
              parent="menu_school_root"
              sequence="10"/>

    <!-- ✅ Result Menu Under Academics -->
    <menuitem id="menu_school_result"
              name="Results"
              parent="menu_school_academics_root"
              action="action_school_result"
              sequence="20"/>

    <!-- ✅ Settings Root -->
    <menuitem id="menu_school_settings_root"
              name="Settings"
              parent="menu_school_root"
              sequence="100"/>

</odoo>
