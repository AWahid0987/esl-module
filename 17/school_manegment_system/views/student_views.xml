<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_student_tree" model="ir.ui.view">
        <field name="name">school.student.tree</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <tree string="Students"
                  decoration-info="state == 'draft'"
                  decoration-success="state == 'admitted'"
                  decoration-danger="state == 'left'">
                <field name="name"/>
                <field name="roll_number"/>
                <field name="class_id"/>
                <field name="parent_name"/>
                <field name="parent_phone"/>
                <field name="attendance_count"/>
                <field name="fee_count"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_student_form" model="ir.ui.view">
        <field name="name">school.student.form</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form string="Student">
                <header>
                    <button name="action_admit" string="Admit" type="object"
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_leave" string="Leave" type="object"
                            class="btn btn-danger" invisible="state != 'admitted'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,admitted,left"/>
                </header>

                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Student Name"/></h1>
                    </div>

                    <group>
                        <group>
                            <field name="roll_number"/>
                            <field name="admission_number" readonly="1"/>
                            <field name="class_id"/>
                            <field name="subject_ids" widget="many2many_tags"/>
                            <field name="date_of_birth"/>
                            <field name="gender"/>
                            <field name="blood_group"/>
                        </group>

                        <group>
                            <field name="image_1920" widget="image" class="oe_avatar"/>
                              <field name="qr_code" widget="image" class="oe_avatar" readonly="1"
                                   options="{'preview_image': 'qr_code'}"
                                   string="QR Code"/>
                        </group>
                    </group>

                    <group>
                        <group string="Contact">
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="address"/>
                        </group>
                        <group string="Parent / Guardian">
                            <field name="parent_name"/>
                            <field name="parent_phone"/>
                            <field name="parent_email"/>
                            <field name="admin_phone"/>
                            <field name="teacher_phone"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Attendance">
                            <field name="attendance_count" widget="statinfo"/>
                            <field name="attendance_ids" context="{'default_student_id': active_id}">
                                <tree>
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Fees">

                            <field name="fee_ids" context="{'default_student_id': active_id}">
                                <tree>
                                    <field name="name"/>
                                    <field name="fee_type"/>
                                    <field name="amount"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_student_search" model="ir.ui.view">
        <field name="name">school.student.search</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="roll_number"/>
                <filter name="admitted" string="Admitted" domain="[('state','=','admitted')]"/>
            </search>
        </field>
    </record>

    <record id="action_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_school_root" name="School"/>
    <menuitem id="menu_student_root" name="Students" parent="menu_school_root"/>
    <menuitem id="menu_student" name="Students" parent="menu_student_root" action="action_student"/>
</odoo>
