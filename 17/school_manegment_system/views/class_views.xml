<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Class Tree View -->
    <record id="view_class_tree" model="ir.ui.view">
        <field name="name">school.class.tree</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <tree string="Classes">
                <field name="name"/>
                <field name="code"/>
                <field name="capacity"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Class Form View -->
    <record id="view_class_form" model="ir.ui.view">
        <field name="name">school.class.form</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <form string="Class">
      

                <sheet>
                 <!-- Print Button Section (Inside Sheet) -->
                    <div class="oe_button_box" name="button_box">
                        <button name="action_print_timetable" 
                                string="Print Time Table" 
                                type="object" 
                                class="oe_stat_button"
                                icon="fa-print"
                                invisible="id == False"/>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Class Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="capacity"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Students">
                            <field name="student_ids"/>
                        </page>
                        <page string="Subjects">
                            <field name="subject_ids"/>
                        </page>
                        <page string="Results">
                            <field name="result_ids"/>
                        </page>
                        <page string="Time Table">
                            <field name="timetable_ids"/>
                        </page>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Class Search View -->
    <record id="view_class_search" model="ir.ui.view">
        <field name="name">school.class.search</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <search string="Search Classes">
                <field name="name"/>
                <field name="code"/>
                <filter string="Active" name="active" domain="[('active','=',True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Name" name="name" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Class Action -->
    <record id="action_class" model="ir.actions.act_window">
        <field name="name">Classes</field>
        <field name="res_model">school.class</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_class_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first class!
            </p>
        </field>
    </record>
         <menuitem id="menu_school_root" name="School"/>

    <!-- ✅ Settings Root -->
    <menuitem id="menu_school_settings_root"
              name="Settings"
              parent="menu_school_root"
              sequence="100"/>

  
    <!-- ✅ Classes under Settings -->
    <menuitem id="menu_settings_classes"
              name="Classes"
              parent="menu_school_settings_root"
              action="action_class"
              sequence="20"/>
 

</odoo> 