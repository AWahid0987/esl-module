<odoo>
<record id="action_report_school_fee" model="ir.actions.report">
    <field name="name">School Fee Report</field>
    <field name="model">school.fee</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">school_manegment_system.report_school_fee_document</field>
    <field name="report_file">school_manegment_system.report_school_fee_document</field>
    <field name="print_report_name">'School_fee_%s' % (object.name)</field>
  
</record>

<record id="paperformat_fee" model="report.paperformat">
    <field name="name">School Fee Paperformat</field>
    <field name="default" eval="False"/>
    <field name="format">A4</field>
    <field name="page_height">0</field>
    <field name="page_width">0</field>
    <field name="orientation">Portrait</field>
    <field name="margin_top">40</field>
    <field name="margin_bottom">25</field>
    <field name="margin_left">7</field>
    <field name="margin_right">7</field>
    <field name="header_line" eval="False"/>
    <field name="header_spacing">35</field>
    <field name="dpi">90</field>
</record>

