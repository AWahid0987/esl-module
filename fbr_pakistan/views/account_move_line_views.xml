<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Invoice Form View - Add FBR fields to invoice lines -->
    <record id="view_move_form_fbr_lines" model="ir.ui.view">
        <field name="name">account.move.form.fbr.lines</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <!-- Add FBR fields to invoice line tree in form view -->
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']"
                position="after">
                <field name="fbr_hs_code" optional="hide" />
                <field name="fbr_uom_id"  optional="hide"/>
                <field name="fbr_sro_id" optional="hide"/>
                <field name="fbr_sro_item_serial_id" optional="hide"/>
                <field name="fbr_fixed_notified_value" optional="hide"/>
                <field name="fbr_sales_tax_withheld" optional="hide"/>
                <field name="fbr_extra_tax" optional="hide"/>
                <field name="fbr_further_tax" optional="hide"/>
                <field name="fbr_fed_payable" optional="hide"/>
            </xpath>

        </field>
    </record>

</odoo>