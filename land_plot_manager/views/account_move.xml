<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_move_form_inherit_pal_number" model="ir.ui.view">
            <field name="name">account.move.form.inherit.pal_number</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <!-- âœ… Remove the duplicate alert div completely -->
                <xpath expr="//div[@class='alert alert-warning w-100 d-flex align-items-center gap-1']"
                       position="replace"/>

                <!-- Insert PAL Number after Customer/Vendor -->
                <xpath expr="//field[@name='partner_id']" position="after">


                </xpath>
                <xpath expr="//field[@name='invoice_date']" position="after">
                    <field name="journal_id"/>
                    <field name="pal_number" readonly="1"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
