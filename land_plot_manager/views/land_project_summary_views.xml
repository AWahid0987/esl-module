<odoo>
    <!-- list View -->
    <record id="view_land_project_summary_list" model="ir.ui.view">
        <field name="name">land.project.summary.list</field>
        <field name="model">land.project.summary</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="total_acres"/>
                <field name="total_marla"/>
                <field name="project_type"/>
                <field name="compact_non"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_land_project_summary_form" model="ir.ui.view">
        <field name="name">land.project.summary.form</field>
        <field name="model">land.project.summary</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="project_id"/>
                            <field name="name"/>
                            <field name="total_acres"/>
                            <field name="total_marla"/>
                            <field name="project_type"/>
                        </group>
                        <group>
                            <field name="compact_non"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action: Define first -->
    <record id="action_land_project_summary" model="ir.actions.act_window">
        <field name="name">Land Project Summary</field>
        <field name="res_model">land.project.summary</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu: Reference module prefix -->
    <menuitem id="menu_land_project_summary_root" name="Land Project Summary" sequence="10"/>
    <menuitem id="menu_land_project_summary" name="Summary" parent="menu_land_root"
              action="land_plot_manager.action_land_project_summary" sequence="20"/>
</odoo>
