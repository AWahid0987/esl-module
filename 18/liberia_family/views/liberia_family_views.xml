                            <field name="investment_needed_de"/>
                            <field name="current_income_en"/>
                            <field name="current_income_de"/>
                        </group>
                        <group>
                            <field name="receivew_1_en"/>
                            <field name="receivew_1_de"/>
                            <field name="receivew_2_en"/>
                            <field name="receivew_2_de"/>
                            <field name="receivew_3_en"/>
                            <field name="receivew_3_de"/>
                            <field name="receivew_4_en"/>
                            <field name="receivew_4_de"/>
                            <field name="additional_income_en"/>
                            <field name="additional_income_de"/>
                            <field name="progress_percentage_en"/>
                            <field name="progress_percentage_de"/>
                        </group>
                    </group>
                    <group>
                        <field name="photo" widget="image" class="oe_avatar"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


