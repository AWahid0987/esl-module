    <!-- Form View liberia En-->
    <record id="view_liberia_family_form" model="ir.ui.view">
        <field name="name">liberia.family.form</field>
        <field name="model">liberia.family</field>
        <field name="arch" type="xml">
            <form string="Liberia Family">
                <sheet>
                    <group>
                        <group>
                            <field name="name_en"/>
