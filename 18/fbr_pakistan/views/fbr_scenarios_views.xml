<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View fbr.scenarios View list -->
    <record id="view_fbr_scenarios_list" model="ir.ui.view">
        <field name="name">view.fbr.scenarios.list</field>
        <field name="model">fbr.scenarios</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
            </list>
        </field>
    </record>

    <!-- View fbr.scenarios form -->
    <record id="view_fbr_scenarios_form" model="ir.ui.view">
        <field name="name">view.fbr.scenarios.form</field>
        <field name="model">fbr.scenarios</field>
        <field name="arch" type="xml">
            <form string="Fbr Scenarios">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                    <group name="code" >

                        <field name="code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View fbr.scenarios search -->
    <record id="view_fbr_scenarios_search" model="ir.ui.view">
        <field name="name">view.fbr.scenarios.search</field>
        <field name="model">fbr.scenarios</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action fbr.scenarios -->
    <record id="action_fbr_scenarios" model="ir.actions.act_window">
        <field name="name">Fbr Scenarios</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">fbr.scenarios</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Fbr Scenarios.
            </p>
        </field>
    </record>

</odoo>
