<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View fbr.document.type View list -->
    <record id="view_fbr_document_type_list" model="ir.ui.view">
        <field name="name">view.fbr.document.type.list</field>
        <field name="model">fbr.document.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View fbr.document.type form -->
    <record id="view_fbr_document_type_form" model="ir.ui.view">
        <field name="name">view.fbr.document.type.form</field>
        <field name="model">fbr.document.type</field>
        <field name="arch" type="xml">
            <form string="Fbr Document Type">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View fbr.document.type search -->
    <record id="view_fbr_document_type_search" model="ir.ui.view">
        <field name="name">view.fbr.document.type.search</field>
        <field name="model">fbr.document.type</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action fbr.document.type -->
    <record id="action_fbr_document_type" model="ir.actions.act_window">
        <field name="name">Fbr Document Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">fbr.document.type</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Fbr Document Type.
            </p>
        </field>
    </record>

</odoo>
