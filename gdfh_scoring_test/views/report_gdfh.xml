<odoo>
    <record id="action_report_gdfh_result" model="ir.actions.report">
        <field name="name">GDfH Result Report</field>
        <field name="model">gdfh.result</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">gdfh_scoring_test.report_gdfh_result_template</field>
        <field name="report_file">gdfh_scoring_test.report_gdfh_result_template</field>
        <field name="print_report_name">'GDfH_Result_%s' % (object.name)</field>
    </record>

    <template id="report_gdfh_result_template">
        <t t-call="web.basic_layout">
            <t t-set="doc" t-value="docs[0]" />
            <t t-set="company" t-value="res_company"/>
            <div class="page">
                <table width="100%" style="margin-bottom: 10px;">
                    <tr>
                        <td align="left" style="width: 50%;">
                            <h2><t t-esc="company.name" /></h2>
                        </td>
                        <td align="right" style="width: 50%;">
                            <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % (company.logo)" style="height: 100px;" />
                        </td>
                    </tr>
                </table>

                <h2>GDfH Scoring Test Result</h2>

              <table width="100%" style="border:1px solid #000; padding:5px;">
    <!-- User Info -->
    <tr style="background-color:#f0f0f0; font-weight:bold;">
        <td style="border:1px solid #000; padding:5px;">Name</td>
        <td style="border:1px solid #000; padding:5px;">Email</td>
        <td style="border:1px solid #000; padding:5px;">Country</td>
    </tr>
    <tr>
        <td style="border:1px solid #000; padding:5px;"><t t-esc="doc.name"/></td>
        <td style="border:1px solid #000; padding:5px;"><t t-esc="doc.email"/></td>
        <td style="border:1px solid #000; padding:5px;"><t t-esc="doc.country"/></td>
    </tr>

    <!-- Scores -->
    <tr style="background-color:#d9d9d9; font-weight:bold;">
        <td colspan="4" style="border:1px solid #000; padding:5px;">Scores</td>
    </tr>

    <!-- Global Awareness -->
    <tr style="background-color:#f0f0f0; font-weight:bold;">
        <td style="border:1px solid #000; padding:5px;">Global Awareness</td>
        <td style="border:1px solid #000; padding:5px;">Q1 Score</td>
        <td style="border:1px solid #000; padding:5px;">Q2 Score</td>
        <td style="border:1px solid #000; padding:5px;">Q3 Score</td>
    </tr>
    <tr>
        <td style="border:1px solid #000; padding:5px;">Answers</td>
        <td style="border:1px solid #000; padding:5px;"><t t-esc="doc.score_1"/></td>
        <td style="border:1px solid #000; padding:5px;"><t t-esc="doc.score_2"/></td>
        <td style="border:1px solid #000; padding:5px;"><t t-esc="doc.score_3"/></td>
    </tr>

    <!-- Active Civic Participation -->
    <tr style="background-color:#f0f0f0; font-weight:bold;">
        <td style="border:1px solid #000; padding:5px;">Active Civic Participation</td>
        <td style="border:1px solid #000; padding:5px;">Q4 Score</td>
        <td style="border:1px solid #000; padding:5px;">Q5 Score</td>
        <td style="border:1px solid #000; padding:5px;">Q6 Score</td>
    </tr>
    <tr>
        <td style="border:1px solid #000; padding:5px;">Answers</td>
        <td style="border:1px solid #000; padding:5px;"><t t-esc="doc.score_4"/></td>
        <td style="border:1px solid #000; padding:5px;"><t t-esc="doc.score_5"/></td>
        <td style="border:1px solid #000; padding:5px;"><t t-esc="doc.score_6"/></td>
    </tr>

    <!-- Repeat same for Environment, Ethical, Peace, Intercultural -->
    <tr style="background-color:#f0f0f0; font-weight:bold;">
        <td>Environment Protection</td>
        <td>Q7</td>
        <td>Q8</td>
        <td>Q9</td>
    </tr>
    <tr>
        <td>Answers</td>
        <td><t t-esc="doc.score_7"/></td>
        <td><t t-esc="doc.score_8"/></td>
        <td><t t-esc="doc.score_9"/></td>
    </tr>

    <tr style="background-color:#f0f0f0; font-weight:bold;">
        <td>Ethical Consumption</td>
        <td>Q10</td>
        <td>Q11</td>
        <td>Q12</td>
    </tr>
    <tr>
        <td>Answers</td>
        <td><t t-esc="doc.score_10"/></td>
        <td><t t-esc="doc.score_11"/></td>
        <td><t t-esc="doc.score_12"/></td>
    </tr>

    <tr style="background-color:#f0f0f0; font-weight:bold;">
        <td>Peace &amp; Conflict Management</td>
        <td>Q13</td>
        <td>Q14</td>
        <td>Q15</td>
    </tr>
    <tr>
        <td>Answers</td>
        <td><t t-esc="doc.score_13"/></td>
        <td><t t-esc="doc.score_14"/></td>
        <td><t t-esc="doc.score_15"/></td>
    </tr>

    <tr style="background-color:#f0f0f0; font-weight:bold;">
        <td>Intercultural Competence</td>
        <td>Q16</td>
        <td>Q17</td>
        <td>Q18</td>
    </tr>
    <tr>
        <td>Answers</td>
        <td><t t-esc="doc.score_16"/></td>
        <td><t t-esc="doc.score_17"/></td>
        <td><t t-esc="doc.score_18"/></td>
    </tr>

    <!-- Total, Level, Submitted -->
    <tr style="font-weight:bold; background-color:#f0f0f0;">
        <td>Total Score: <t t-esc="doc.total_score"/></td>
        <td>Level: <t t-esc="doc.level"/></td>
        <td colspan="2">Submitted On: <t t-esc="doc.submitted_on"/></td>
    </tr>
</table>
<table>
<!-- Total, Level, Submitted -->
    <tr style="font-weight:bold; background-color:#f0f0f0;">
        <td>Total Score: <t t-esc="doc.total_score"/></td>
        <td>Level: <t t-esc="doc.level"/></td>
        <td colspan="2">Submitted On: <t t-esc="doc.submitted_on"/></td>
    </tr>
</table>

            </div>
        </t>
    </template>
</odoo>
